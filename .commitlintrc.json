{
  "externds": ["@commitlint/config-angular"],
  "rules": {
    "references-empty": [2, "never"],
    "scope-case": [2, "always", "upper-case"],
    "subject-case": [2, "always", "sentence-case"],
    "type-enum": [
      2,
      "always",
      ["infra", "docs", "feat", "fix", "refactor", "revert", "format", "test", "template"]
    ]
  }
}
